{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../assets{{'/css/bootstrap.css'}}" >
{% endblock %}


{%  extends 'base.html.twig' %}

    {% block    title 'Agence bini' %}

    {% block body %}

        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8"></div>

                    <div class="col-md-4">
                        <h1>{{ property.title }}</h1>
                        <h2>{{ property.rooms }} pièce - {{ property.surface }} m²</h2>
                        <div class="text-danger font-weight-bold" style="font-size: 2rem;">{{ property.formattedPrice }} FRCFA </div>
                        <a href="" class="btn btn-primary">Contact agences</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <p class="">
                {{ property.description | nl2br  }}
            </p>

            <div class="row">
                <div class="col-md-8">
                    <h2>Caracteristiques</h2>
                    <table class="table t table-striped">
                        <tr>
                            <td>Surface habitable</td>
                            <td>{{ property.surface }} m²</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td>{{ property.rooms}} </td>
                        </tr>
                        <tr>
                            <td>Chambre</td>
                            <td>{{ property.bedrooms}} </td>
                        </tr>
                        <tr>
                            <td>Etage</td>
                            <td>{{ property.floor}} </td>
                        </tr>
                        <tr>
                            <td>Chauffage</td>
                            <td>{{ property.heatType}} </td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-4">
                    <h2>Spécificités</h2>
                </div>
            </div>

        </div>

    {% endblock %}